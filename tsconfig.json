{
  "compilerOptions": {
    "allowJs": true,
    "module": "es2015",
    "lib": [
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es3",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "after-effect.d.ts"
  ],
  "exclude": [
    "tests",
    "example",
    "node_modules"
  ]
}